<p style="color: green"><%= notice %></p>

<% content_for :title, "Movies" %>

<h1>Movies</h1>

<div id="movies">
  <table>
    <thead>
      <tr>
        <th><%= link_to "Title", movies_path(sort: "title", direction: toggle_sort_direction("title")) %></th>
        <th><%= link_to "Rating", movies_path(sort: "rating", direction: toggle_sort_direction("rating")) %></th>
        <th><%= link_to "Release Date", movies_path(sort: "release_date", direction: toggle_sort_direction("release_date")) %></th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <td><%= movie.title %></td>
          <td><%= movie.rating %></td>
          <td><%= movie.release_date %></td>
          <td>
            <%= link_to "Show", movie, class: "btn btn-primary" %>
            <%= link_to "Edit", edit_movie_path(movie), class: "btn btn-secondary" %>
            <%= link_to "Delete", movie, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New Movie", new_movie_path, class: "btn btn-success" %>