<% content_for :title, "#{@movie.title}" %>

<div class="header-container">
  <h1><%= @movie.title %></h1>
</div>

<p class="notice"><%= notice %></p>

<div class="movie-details-container">
  <div class="movie-details">
    <h2>Movie Details</h2>
    <p><strong>Title:</strong> <%= @movie.title %></p>
    <p><strong>Release Date:</strong> <%= @movie.release_date.strftime("%B %d, %Y") %></p>
    <p><strong>Rating:</strong> <%= @movie.rating %></p>
    <p><strong>Description:</strong> <%= @movie.description.presence || "N/A" %></p>
  </div>
</div>

<div class="navigation-links">
  <%= link_to "Edit", edit_movie_path(@movie), class: "btn btn-primary" %>
  <%= button_to "Delete", @movie, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to delete this movie?" } %>
  <%= link_to "Home", movies_path, class: "btn btn-secondary" %>
</div>
